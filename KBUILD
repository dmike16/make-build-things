languages := cc
install_language := cc
mode := color_
debug := @

src_root := src
dep_root := $(empty)
mod_name := $(empty) ## only for go projects
ptype := STATIC_LIB

#  ############################################################################# #
#  Command definition.
#  ############################################################################# #
CC := gcc
LD := ld
RM := rm
MV := mv
MKDIR:= mkdir
AR:= ar
RANLIB:= ranlib
DOCKER:= docker
GIT:= git
GO:= go

export CC LD RM MV MKDIR AR RANLIB DOCKER GIT GO mod_name ptype